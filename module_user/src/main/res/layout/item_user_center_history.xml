<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/left_right_padding"
    android:layout_marginRight="@dimen/left_right_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/default_head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp"
                    android:text="华freshman" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/textStyle_13_black2"
                        android:id="@+id/tv_user_follow_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广东省深圳市" />

                    <TextView
                        style="@style/textStyle_13_black2"
                        android:id="@+id/tv_user_gold_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="小米M4" />

                    <TextView
                        style="@style/textStyle_13_black2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="一分钟前" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_grey"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        style="@style/textStyle_16_black3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="48dp"
        android:text="不作死就不会死" />

    <TextView
        style="@style/textStyle_13_black2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="原文: 看见大海变成这样请立即上岸"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/line_height"-->
        <!--android:layout_marginTop="22dp"-->
        <!--android:background="@color/line_color" />-->

</LinearLayout>