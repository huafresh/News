<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/live_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:background="@color/title_bar_bac">

        <com.example.hua.framework.widget.CommonTabLayout
            android:id="@+id/live_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabIndicatorColor="@color/color_eee"
            app:tabTextSize="14sp"
            app:tabMode="scrollable"
            app:tabPaddingWrapper="10dp"
            app:TabViewInterval="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/live_clock" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/live_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>