<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--框架默认主题-->
    <style name="FrameworkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--常用文字样式开始-->
    <style name="textStyle_16_ff">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="textStyle_16_00">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="textStyle_16_33">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_333</item>
    </style>
    <style name="textStyle_16_66">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_666</item>
    </style>
    <style name="textStyle_16_99">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_999</item>
    </style>
    <style name="textStyle_16_cc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_ccc</item>
    </style>

    <style name="textStyle_18_blue">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <!--默认dialog样式-->
    <style name="default_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--popupWindow弹出动画-->
    <style name="PopupWindowStyle">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_dismiss</item>
    </style>

    <!--常用文字样式结束-->


    <style name="textStyle_16_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>