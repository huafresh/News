<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/my_data_number"
        style="@style/textStyle_15_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_zero"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/my_data_text"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/my_data_text"
        style="@style/textStyle_13_black2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_subscribe"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/my_data_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/my_data_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subscribe"
        app:layout_constraintLeft_toLeftOf="@id/my_data_number"
        app:layout_constraintRight_toRightOf="@id/my_data_number"
        app:layout_constraintTop_toTopOf="@id/my_data_number"
        app:layout_constraintBottom_toBottomOf="@id/my_data_number"/>
</android.support.constraint.ConstraintLayout>