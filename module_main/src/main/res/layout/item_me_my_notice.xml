<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_my_notice_text"
        style="@style/textStyle_14_black2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_my_attention"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_my_notice_number"/>

    <TextView
        android:id="@+id/tv_my_notice_number"
        style="@style/textStyle_15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/number_zero"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_my_notice_text"
        app:layout_constraintLeft_toRightOf="@+id/tv_my_notice_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_my_notice_text"/>

</android.support.constraint.ConstraintLayout>