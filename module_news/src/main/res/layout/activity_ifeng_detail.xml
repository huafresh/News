<?xml version="1.0" encoding="utf-8"?>
<com.example.hua.framework.widget.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:textColor="#333333"
                android:textSize="24sp"
                tools:text="越来越多的年轻人需要父母资助"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title">


                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_logo"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_logo"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/iv_logo"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="大风号"
                    />

                <TextView
                    android:id="@+id/tv_updateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_logo"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/iv_logo"
                    android:textColor="#989898"
                    android:textSize="12sp"
                    tools:text="5小时前"
                    />

                <Button
                    android:id="@+id/bt_like"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/read_bt_bg"
                    android:text="@string/ifeng_detail_notice"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </RelativeLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@android:color/white"
            />
    </LinearLayout>

</com.example.hua.framework.widget.CustomScrollView>