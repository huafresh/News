<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edt_input_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_send_click_bac"
        app:layout_constraintTop_toTopOf="@+id/view_send_click_bac"
        app:layout_constraintBottom_toBottomOf="@+id/view_send_click_bac"
        android:layout_marginEnd="15dp"/>

    <View
        android:id="@+id/view_send_click_bac"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/textStyle_16_black2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_bottom_send"
        app:layout_constraintBottom_toBottomOf="@+id/view_send_click_bac"
        app:layout_constraintLeft_toLeftOf="@+id/view_send_click_bac"
        app:layout_constraintRight_toRightOf="@+id/view_send_click_bac"
        app:layout_constraintTop_toTopOf="@+id/view_send_click_bac"/>

    <ImageView
        android:id="@+id/iv_expression_input"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/expression_collaps"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view_send_click_bac"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/emoji_keyboard_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_expression_input"
        android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>